@model ConfirmMailViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="/_framework/aspnetcore-browser-refresh.js"></script>
<div class="container">
<br>
<br>
<form method="post">
    <h2>Mail Adresi : @ViewBag.v</h2>
    <label>Mail adresi</label>
    <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v">
    <br>
    <label>Mail adresinize gelen 6 haneli kodu giriniz</label>
    <input type="text" class="form-control" asp-for="ConfirmCode">
    <br>
    <button type="submit" class="btn btn-primary">Onayla</button>
</form>
</div>    